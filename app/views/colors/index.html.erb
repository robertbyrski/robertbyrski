<p id="notice"><%= notice %></p>

<h1>Colors</h1>
<%= form_tag colors_path, :method => 'get' do %>
           <%= text_field_tag :search, params[:serarch] %>
      <%= submit_tag "Search", class: "btn btn-large btn-primary" %>
     <% end %>



<table>
  <thead>
    <tr>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colors.each do |color| %>
      <tr>
        <td><%= color.color %></td>
        <td><%= link_to 'Show', color %></td>
        <td><%= link_to 'Edit', edit_color_path(color) %></td>
        <td><%= link_to 'Destroy', color, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Color', new_color_path %>
